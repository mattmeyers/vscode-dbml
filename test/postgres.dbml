Enum "products_status" {
  "out_of_stock"
  "in_stock"
  "running_low"
}

Table "users" {
  "id" int [pk, increment]
  "full_name" varchar
  "created_at" timestamp
  "country_code" int
}

Table "merchants" {
  "id" int [pk]
  "merchant_name" varchar
  "country_code" int
  "created at" varchar
  "admin_id" int
}

Table "countries" {
  "code" int [pk]
  "name" varchar
  "continent_name" varchar
  "test" bool [default: true, note: 'This is a test']
}

Table "order_items" {
  "order_id" int
  "product_id" int
  "quantity" int [default: 1]
}

Table "orders" {
  "id" int [pk]
  "user_id" int [unique, not null]
  "status" varchar
  "created_at" varchar [note: 'When order created']
}

TableGroup "order" [note: "Tables related to orders"] {
  "orders"
  "order_items"
}

Table "products" {
  "id" int [pk]
  "name" varchar
  "merchant_id" int [not null]
  "price" int
  "status" products_status
  "created_at" datetime [default: `now()`]

        
Indexes {
  (merchant_id, status) [name: "product_status"]
  id [unique]
}
}

Ref:"users"."id" < "merchants"."admin_id"

Ref:"countries"."code" < "users"."country_code"

Ref:"countries"."code" < "merchants"."country_code"

Ref:"orders"."id" < "order_items"."order_id"

Ref:"products"."id" < "order_items"."product_id"

Ref:"merchants"."id" < "products"."merchant_id"
